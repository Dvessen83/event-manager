<%= form_for @visitor do |f| %>

  <%= f.label : event_id %>
  <%= f.collection_select(:event_id, Event.all, :id, :name)%>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.label :payment_method %>
  <%= f.text_field :payment_method %>

  <%= f.submit (@visitor.new_record? ? "Create" : "Update") %>

<% end %>
