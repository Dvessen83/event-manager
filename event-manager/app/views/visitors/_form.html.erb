<p><%= form_for @visitor do |f| %>

  <p><%= f.label :event_id %>
  <%= f.collection_select(:event_id, Event.all, :id, :name)%></p>

  <p><%= f.label :first_name %>
  <%= f.text_field :first_name %></p>

  <p><%= f.label :last_name %>
  <%= f.text_field :last_name %></p>

  <p><%= f.label :age %>
  <%= f.number_field :age %></p>

  <p><%= f.label :image_url %>
  <%= f.text_field :image_url %></p>

  <p><%= f.label :payment_method %>
  <%= f.text_field :payment_method %></p>

  <p><%= f.submit (@visitor.new_record? ? "Create" : "Update") %></p>

<% end %></p>
